<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimePickerActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TimePicker>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_picker"
            android:paddingRight="@dimen/padding_picker">

            <Button
                android:id="@+id/btnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/off_alarm"
                android:layout_alignParentLeft="true"/>

            <Button
                android:id="@+id/btnOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/on_alarm"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnSaveTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_picker"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="@string/save_alram"
            android:layout_marginTop="@dimen/margin_picker"/>

    </LinearLayout>

</RelativeLayout>